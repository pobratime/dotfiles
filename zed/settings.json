{
  "theme": "One Dark Pro",

  "magnifcation": 1.0,
  "borded_size": 0.0,
  "inactive_opacity": 0.0,

  "autosave": "off",
  "restore_on_startup": "last_session",

  "auto_update": true,

  "base_keymap": "VSCode",

  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },

  "buffer_font_family": "Fira Code",
  "buffer_font_size": 13,
  "buffer_font_weight": null,
  "buffer_line_height": "standard",

  "confirm_quit": true,

  "inline_completions": {
    "disabled_globs": [".env"],
    "disabled_in": ["comment", "string"]
  },

  "current_line_highlight": "all",
  "cursor_blink": true,
  "cursor_shape": "bar",

  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": false,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true,
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },

  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },

  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": false,
    "activate_on_close": "history",
    "always_show_close_button": false
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },

  "enable_language_server": true,

  "lsp": {
    "clangd": {
      "binary": {
        "path": "/opt/homebrew/opt/llvm/bin/clangd"
      }
    }
  },

  "languages": {
    "C++": {
      "format_on_save": "on",
      "inline_completions_disabled_in": ["comment", "string"]
    },
    "C": {
      "format_on_save": "on",
      "inline_completions_disabled_in": ["comment", "string"]
    }
  },

  "formatter": "auto",
  "format_on_save": "on",
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,
  "ensure_final_newline_on_save": false,

  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 0,
    "inline_blame": {
      "enabled": true
    }
  },

  "indent_guides": {
    "enabled": true,
    "active_line_width": 1,
    "background_coloring": "disabled",
    "coloring": "fixed",
    "line_width": 0
  },

  "hard_tabs": false,
  "hover_popover_enabled": true,

  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_other_hints": false,
    "show_parameter_hints": false
  },

  "journal": {
    "path": "/Users/lukaajdukovic/Desktop/MATF",
    "hour_format": "hour12"
  },

  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": false
  },

  "max_modal_width": "small",

  "remove_trailing_whitespace_on_save": true,

  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },

  "show_call_status_icon": true,
  "show_completions_on_input": true,
  "show_completion_documentation": false,
  "show_inline_completions": false,

  "show_whitespaces": "selection",
  "soft_wrap": "none",
  "tab_size": 2,

  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },

  "terminal": {
    "dock": "bottom",
    "alternate_scroll": "on",
    "blinking": "terminal_controlled",
    "copy_on_select": false,
    "font_size": 12,
    "font_family": "Fira Code",
    "line_height": "standard",
    "button": true,
    "working_directory": "current_project_directory",
    "toolbar": {
      "breadcrumbs": true
    }
  },

  "project_panel": {
    "button": true,
    "dock": "left",
    "default_width": 240,
    "git_status": true,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "file_icons": true,
    "folder_icons": false,
    "indent_size": 12,
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "never"
    }
  },

  "outline_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 12,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "never"
    }
  },

  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },

  "unnecessary_code_fade": 0.5,

  "ui_font_family": "Fira Code",
  "ui_font_size": 14,
  "ui_font_weight": null,

  "vim_mode": true,
  "relative_line_numbers": true,

  "chat_panel": {
    "button": false
  }
}
